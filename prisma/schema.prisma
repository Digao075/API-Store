
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}


model Product {
  id          String   @id @default(uuid())
  name        String
  description String
  price       Decimal
  imageUrl    String
  category    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model User {
  id           String    @id @default(uuid())
  phoneNumber  String    @unique 
  name         String      
  passwordHash String    
  role         Role      @default(CUSTOMER) 
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}

enum Role {
  CUSTOMER
  ADMIN
}